<idea-plugin>
    <id>net.bjonnh.intellij.filepermissionsplugin</id>
    <name>FilePermissionsPlugin</name>
    <vendor>Bjonnh.net</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="net.bjonnh.intellij.filepermissionsplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="net.bjonnh.intellij.filepermissionsplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="net.bjonnh.intellij.filepermissionsplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>

        <action id="net.bjonnh.intellij.filepermissionsplugin.actions.MakeExecutableAction"
                class="net.bjonnh.intellij.filepermissionsplugin.actions.MakeExecutableAction"
                text="Make file executable" description="Make the file executable (UNIX-likes only)">
            <add-to-group group-id="FilePropertiesGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
